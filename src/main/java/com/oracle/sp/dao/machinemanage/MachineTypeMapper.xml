<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.oracle.sp.dao.machinemanage.MachineTypeMapper">
    <resultMap id="typeDO" type="com.oracle.sp.domain.MachineTypeInfoDO">
    	<result column="ID" property="id"/>  
        <result column="TYPE_NAME" property="name"/>
        <result column="TYPE_DESC" property="desc"/>
        <result column="TYPE_PIC" property="picture"/>
    </resultMap>
    
	<select id="selectByName" resultMap="typeDO">
		select
			*
		from
			machine_type_tbl
		where
			TYPE_NAME = #{name}
	</select>
	
	<select id="selectAll" resultMap="typeDO">
		select
			*
		from
			machine_type_tbl
	</select>

	<insert id="insert">
		insert into machine_type_tbl(TYPE_NAME, TYPE_DESC, TYPE_PIC)
		values (#{name},#{desc}, #{picture})
	</insert>
	
	<update id="updateByName">
		update machine_type_tbl set
			TYPE_NAME = #{name},
			TYPE_DESC = #{desc},
			TYPE_PIC = #{picture}
		where
			TYPE_NAME = #{name}
	</update>
	
	<delete id="deleteByName">
		delete from machine_type_tbl
		where
			TYPE_NAME = #{name}
	</delete>
	
</mapper>